<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/weekend"
    xmlns:android="http://schemas.android.com/apk/res/android" >



    <TextView
        android:id="@+id/text_view_1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Çalışma süresi"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gri"/>
    <LinearLayout
        android:id="@+id/layout_calisma"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/acik"
        android:gravity="center"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/number_picker_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <TextView
            android:id="@+id/text_view_dk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dk"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"/>

        <NumberPicker
            android:id="@+id/number_picker_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sn"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gri"/>

    <TextView
        android:id="@+id/text_view_2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Dinlenme süresi"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/white"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gri"/>

    <LinearLayout
        android:id="@+id/layout_dinlenme"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/acik"
        android:gravity="center"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/number_picker_dinlenme_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <TextView
            android:id="@+id/text_view_dinlenme_dk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dk"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"/>

        <NumberPicker
            android:id="@+id/number_picker_dinlenme_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view_dinlenme_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sn"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"/>

    </LinearLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="@color/gri"/>


    <TextView
        android:id="@+id/text_view_3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Round Sayısı"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gri"/>


    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/acik"
        android:gravity="center"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/number_picker_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <TextView
            android:id="@+id/text_view_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Round"
            android:textSize="24sp"
            android:layout_marginLeft="16dp"/>



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gri"/>

    <Button
        android:id="@+id/basla_btn"
        android:text="Başla"
        android:textColor="#fffbfbfb"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:shadowColor="#ff020202"
        android:layout_marginTop="8dp"
        android:onClick="basla_btn"

        />


</LinearLayout>



